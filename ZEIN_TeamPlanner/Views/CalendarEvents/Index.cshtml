@model IEnumerable<ZEIN_TeamPlanner.Models.CalendarEvent> 

@{
    ViewData["Title"] = "Events - " + ViewBag.GroupName;
}

<h2>Events in @ViewBag.GroupName</h2>

@if (!ViewBag.IsMember)
{
    <p>
        <a asp-action="Create" asp-route-groupId="@ViewBag.GroupId" class="btn btn-primary">Create New Event</a>
    </p>
    <p>
        <a asp-controller="CalendarEvents" asp-action="Calendar" asp-route-groupId="@ViewBag.GroupId" class="btn btn-secondary">View Events in Calendar</a>
    </p>
}

@if (Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Start Time</th>
                <th>End Time</th>
                <th>Type</th>
                <th>Is All Day</th>
                <th>Recurrence</th>
                @if (!ViewBag.IsMember)
                {
                    <th>Actions</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var calendarEvent in Model)
            {
                <tr>
                    <td>
                        <a asp-action="Details" asp-route-id="@calendarEvent.CalendarEventId">@calendarEvent.Title</a>
                    </td>
                    <td>@(calendarEvent.Description?.Length > 50 ? calendarEvent.Description.Substring(0, 50) + "..." : calendarEvent.Description ?? "")</td>
                    <td>@calendarEvent.StartTime.ToString("dd MMMM yyyy HH:mm")</td>
                    <td>@(calendarEvent.EndTime?.ToString("dd MMMM yyyy HH:mm") ?? "No end time")</td>
                    <td>@calendarEvent.Type</td>
                    <td>@calendarEvent.IsAllDay</td>
                    <td>@(calendarEvent.RecurrenceRule ?? "None")</td>
                    @if (!ViewBag.IsMember)
                    {
                        <td>
                            <a asp-action="Edit" asp-route-id="@calendarEvent.CalendarEventId" class="btn btn-sm btn-secondary">Edit</a>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No events in this group.</p>
}

<div class="mt-3">
    <a asp-controller="Groups" asp-action="Details" asp-route-id="@ViewBag.GroupId" class="btn btn-primary">Back to Group</a>
</div>