@model ZEIN_TeamPlanner.Models.Group

@{
    ViewData["Title"] = "Delete Group";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<link rel="stylesheet" href="~/css/groupDelete.css" />

<div class="card-container">
    <h2>Delete Group</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <h3>Are you sure you want to delete this group?</h3>

    <div class="card-body">
        <h5 class="card-title">@Model.GroupName</h5>
        <dl class="row">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-10">@Model.GroupName</dd>
            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-10">@(Model.Description ?? "No description")</dd>
            <dt class="col-sm-3">Created At</dt>
            <dd class="col-sm-10">@Model.CreateAt.ToString("dd MMM yyyy")</dd>
        </dl>

        <form asp-action="Delete" asp-controller="Groups" method="post">
            <input type="hidden" name="id" value="@Model.GroupId" />
            @Html.AntiForgeryToken()
            <div class="button-group">
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Delete
                </button>
                <a asp-action="Details" asp-controller="Groups" asp-route-id="@Model.GroupId" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>