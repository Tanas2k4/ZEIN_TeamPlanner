@model ZEIN_TeamPlanner.Models.Group
@{
    ViewData["Title"] = "Delete Group";
}
<h2>Delete Group</h2>
<h3>Are you sure you want to delete this group?</h3>
<div>
    <h4>@Model.GroupName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.GroupName</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@(Model.Description ?? "No description")</dd>
        <dt class="col-sm-2">Created At</dt>
        <dd class="col-sm-10">@Model.CreateAt.ToString("dd MMM yyyy")</dd>
    </dl>
    <!-- Sửa lại form action -->
    <form asp-action="Delete" asp-controller="Groups" method="post">
        <input type="hidden" name="id" value="@Model.GroupId" />
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Details" asp-route-id="@Model.GroupId" class="btn btn-secondary">Cancel</a>
    </form>
</div>