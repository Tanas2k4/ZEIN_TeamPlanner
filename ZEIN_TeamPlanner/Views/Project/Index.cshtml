@model List<ZEIN_TeamPlanner.Models.Group>
@{
    ViewData["Title"] = "Danh sách dự án";
}
<div class="index-container">
    <h2 class="page-title">Danh sách dự án</h2>
    <div class="table-actions">
        <a asp-action="Create" class="btn btn-primary btn-lg animated pulse">Tạo dự án mới</a>
    </div>
    <table class="table table-striped table-hover animated fadeInUp">
        <thead>
            <tr>
                <th>Tên dự án</th>
                <th>Mô tả</th>
                <th>Ngày bắt đầu</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var group in Model ?? new List<ZEIN_TeamPlanner.Models.Group>())
            {
                <tr>
                    <td>@group.GroupName</td>
                    <td>@(string.IsNullOrEmpty(group.Description) ? "Chưa có mô tả" : group.Description)</td>
                    <td>@group.CreateAt.ToString("dd/MM/yyyy")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@group.GroupId" class="btn btn-info btn-sm">Xem chi tiết</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link href="~/css/projectIndex.css" rel="stylesheet" />
}