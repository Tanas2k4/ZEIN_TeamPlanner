@model ZEIN_TeamPlanner.Models.InviteMembersViewModel
@{
    ViewData["Title"] = "Mời thành viên";
}
<div class="invite-container">
    <h2 class="page-title">Mời thành viên vào dự án</h2>
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger animated fadeIn">
            <ul>
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }
    <form asp-action="InviteMembers" method="post" class="invite-form animated fadeInUp">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="GroupId" />
        <div class="form-group">
            <label asp-for="Emails">Email thành viên (cách nhau bằng dấu phẩy, dòng mới hoặc dấu chấm phẩy)</label>
            <textarea asp-for="Emails" class="form-control" rows="5" required></textarea>
            <span asp-validation-for="Emails" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Role">Vai trò</label>
            <select asp-for="Role" class="form-control" asp-items="Html.GetEnumSelectList<MemberRole>()"></select>
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>
        <div class="form-group">
            <h5>Thành viên hiện tại:</h5>
            @if (Model.ExistingMembers.Any())
            {
                <ul class="member-list">
                    @foreach (var email in Model.ExistingMembers)
                    {
                        <li>@email</li>
                    }
                </ul>
            }
            else
            {
                <p class="text-muted">Chưa có thành viên nào.</p>
            }
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Gửi lời mời</button>
            <a asp-action="Details" asp-route-id="@Model.GroupId" class="btn btn-secondary">Quay lại</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link href="~/css/projectInvite.css" rel="stylesheet" />
}