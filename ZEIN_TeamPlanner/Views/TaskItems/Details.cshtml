@using System.Security.Claims
@model ZEIN_TeamPlanner.Models.TaskItem

@{
    ViewData["Title"] = Model.Title;
    var currentUserId = User.FindFirstValue(ClaimTypes.NameIdentifier);
    var isMember = !Model.Group.Members.Any(m => m.UserId == currentUserId && m.Role == GroupRole.Admin);
    var isWithinDeadline = Model.Deadline.HasValue && Model.Deadline > DateTime.UtcNow;
    var attachments = ViewBag.Attachments as List<FileAttachment> ?? new List<FileAttachment>();
}

@section Styles {
    <link href="~/css/taskItemDetails.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
}

<!-- Task Title Display -->
<div class="mb-4 p-3 bg-light rounded shadow-sm">
    <h2 class="mb-0">
        <i class="bi bi-card-checklist me-2"></i> @Model.Title
    </h2>
</div>

<div class="task-details-layout">
    <!-- Left: General (full height) -->
    <div class="left-panel">
        <div class="card general h-100">
            <div class="card-header">
                <i class="bi bi-info-circle"></i> General
            </div>
            <div class="card-body">
                <div class="card-body general-body">

                    <div class="section">
                        <h6><i class="bi bi-list-task me-1"></i> General Information</h6>
                        <div class="row-info">
                            <label>Task Id:</label><span>@Model.TaskItemId</span>
                        </div>
                        <div class="row-info">
                            <label>Priority:</label><span><span class="badge bg-info">@Model.Priority?.Name ?? "LOW"</span></span>
                        </div>
                        <div class="row-info">
                            <label>Status:</label><span>@Model.Status</span>
                        </div>
                        <div class="row-info">
                            <label>Description:</label><span>@(string.IsNullOrWhiteSpace(Model.Description) ? "N/A" : Model.Description)</span>
                        </div>
                    </div>

                    <div class="section">
                        <h6><i class="bi bi-people me-1"></i> User & Role Information</h6>
                        <div class="row-info">
                            <label>Assigned To:</label><span>@(Model.AssignedToUser != null ? Model.AssignedToUser.FullName : "Everybody")</span>
                        </div>
                    </div>

                    <div class="section">
                        <h6><i class="bi bi-clock-history me-1"></i> Time Information</h6>
                        <div class="row-info">
                            <label>Created:</label><span>@Model.CreatedAt.ToString("dd MMM yyyy HH:mm")</span>
                        </div>
                        <div class="row-info">
                            <label>Deadline:</label><span>@(Model.Deadline.HasValue? Model.Deadline.Value.ToString("dd MMM yyyy HH:mm") : "N/A")</span>
                        </div>
                        @if (Model.Status == ZEIN_TeamPlanner.Models.TaskItem.TaskStatus.Done && Model.CompletedAt.HasValue)
                        {
                            <div class="row-info">
                                <label>Completed At:</label>
                                <span>@Model.CompletedAt.Value.ToString("dd MMM yyyy HH:mm")</span>
                            </div>
                        }
                    </div>

                    <div class="section">
                        <h6><i class="bi bi-briefcase me-1"></i> Case Info</h6>
                        <div class="row-info">
                            <label>Group:</label><span>@Model.Group?.GroupName ?? "N/A"</span>
                        </div>
                        <div class="row-info">
                            <label>Group Role:</label><span>@(isMember ? "Member" : "Admin")</span>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <!-- Right: Documents + Notes (50/50) -->
    <div class="right-panel">
        <!-- Documents -->
        <div class="card documents">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span><i class="bi bi-folder"></i> Documents</span>
                <form asp-action="UploadAttachment" method="post" enctype="multipart/form-data" class="d-flex gap-2">
                    <input type="hidden" name="taskId" value="@Model.TaskItemId" />
                    <input type="file" name="file" class="form-control form-control-sm" />
                    <button type="submit" class="btn btn-outline-primary btn-sm"
                            @(isMember && !isWithinDeadline ? "disabled" : "")>
                        Add document
                    </button>
                </form>
            </div>
            <div class="card-body text-center">
                @if (attachments.Any())
                {
                    <ul class="list-group text-start">
                        @foreach (var file in attachments)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <i class="bi bi-paperclip"></i>
                                <a href="@file.FileUrl" target="_blank" class="ms-2">@file.FileName</a>
                                @if ((isMember && isWithinDeadline) || !isMember)
                                {
                                    <form asp-action="DeleteAttachment" method="post" class="d-inline ms-auto">
                                        <input type="hidden" name="attachmentId" value="@file.Id" />
                                        <input type="hidden" name="taskId" value="@Model.TaskItemId" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger ms-2">Delete</button>
                                    </form>
                                }
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <div class="empty-state">
                        <i class="bi bi-info-circle display-4"></i>
                        <p>No document available</p>
                        <small>Please add a document with the link above.</small>
                    </div>
                }
            </div>
        </div>

        <!-- Notes -->
        <div class="card notes">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span><i class="bi bi-journal-text"></i> Notes</span>
                <div>
                    <label class="me-2">
                        <input type="checkbox" checked disabled />
                        System notes
                    </label>
                    <a href="#" class="me-2">Add note</a>
                    <a href="#">Show more</a>
                </div>
            </div>
            <div class="card-body text-center">
                <div class="empty-state">
                    <i class="bi bi-info-circle display-4"></i>
                    <p>No note available</p>
                    <small>Please add a note with the link above.</small>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Footer Buttons -->
<div class="mt-4 text-end">
    <a asp-action="Index" asp-route-groupId="@Model.GroupId" class="btn btn-secondary">Back to Tasks</a>
    @if (!isMember)
    {
        <a asp-action="Edit" asp-route-id="@Model.TaskItemId" class="btn btn-primary ms-2">Edit</a>
        <a asp-action="Delete" asp-route-id="@Model.TaskItemId" class="btn btn-danger ms-2">Delete</a>
    }
</div>
