@model IEnumerable<ZEIN_TeamPlanner.Models.TaskItem>

@{
    ViewData["Title"] = "Tasks - " + ViewBag.GroupName;
}

<h2>Tasks in @ViewBag.GroupName</h2>

@if (!ViewBag.IsMember)
{
    <p>
        <a asp-action="Create" asp-route-groupId="@ViewBag.GroupId" class="btn btn-primary">Create New Task</a>
    </p>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Status</th>
                <th>Deadline</th>
                <th>Assigned To</th>
                @* <th>Priority</th> *@
                @* <th>Tags</th> *@
                <th>Completed At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var task in Model)
            {
                <tr>
                    <td>
                        <a asp-action="Details" asp-route-id="@task.TaskItemId">@task.Title</a>
                    </td>
                    <td>@(task.Description?.Length > 50 ? task.Description.Substring(0, 50) + "..." : task.Description ?? "")</td>
                    <td>
                        <form asp-action="UpdateStatus" method="post" style="display: flex">
                            <input type="hidden" name="taskId" value="@task.TaskItemId" />
                            <select name="status" class="form-select form-select-sm">
                                <option value="ToDo" selected="@(task.Status == TaskItem.TaskStatus.ToDo)">To Do</option>
                                <option value="InProgress" selected="@(task.Status == TaskItem.TaskStatus.InProgress)">In Progress</option>
                                <option value="Done" selected="@(task.Status == TaskItem.TaskStatus.Done)">Done</option>
                            </select>
                            <button type="submit" class="btn btn-sm btn-primary mt-1">Save</button>
                        </form>
                    </td>
                    <td>@(task.Deadline?.ToString("dd MMMM yyyy") ?? "No deadline")</td>
                    <td>@(task.AssignedToUser?.FullName ?? "Unassigned")</td>
                    @* <td>@(task.Priority?.Name ?? "None")</td> *@
                    @* <td>@(task.Tags ?? "")</td> *@
                    <td>@(task.CompletedAt?.ToString("dd MMMM yyyy HH:mm") ?? "Not completed")</td>
                    <td>
                        @if (!ViewBag.IsMember)
                        {
                            <a asp-action="Edit" asp-route-id="@task.TaskItemId" class="btn btn-sm btn-secondary">Edit</a>
                            <a asp-action="Delete" asp-route-id="@task.TaskItemId" class="btn btn-sm btn-danger">Delete</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No tasks in this group.</p>
}

<div class="mt-3">
    <a asp-controller="Groups" asp-action="Details" asp-route-id="@ViewBag.GroupId" class="btn btn-primary">Back to Group</a>
    <a asp-action="GlobalTasks" class="btn btn-info">View All Tasks</a>
</div>